{{#each dbArticles}}

<div class="card">
  <div class="card-header" id="card">
    <h3> Article Title: {{title}}</h3>
  </div>
  <div class="card-body" id="cardBody">
     <p>Summary: {{summary}}</p>
    <a href={{URL}} target="_blank" class="btn"  id="read">Read Here</a>
   
  
  {{#each comment}}

<h3>Commenter: {{UserName}}</h3>
<h3>What They Think: {{comment}}</h3>
<button class="btn btn-danger delete" id="modalButton" data-id={{_id}}>Delete your comment?</button>
<br>
  {{/each}}

  

  </div>
</div>
<br>

{{/each}}